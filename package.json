{
    "name": "sindarin.compiler",
    "version": "0.1.0",
    "main": "dist/index.html",
    "scripts": {
        "build": "parcel build --no-minify --public-url=. src/index.html",
        "build:prod": "rm -rf public && parcel build --out-dir public --no-minify --no-source-maps --public-url=. src/index.html && cp -r data public/",
        "watch": "parcel watch --public-url=. --hmr-hostname=localhost src/index.html",
        "start": "nw&",
        "start:dev": "concurrently 'npm run watch' 'npm start'",
        "deploy": "npm run build:prod && vercel --prod",
        "qa:build-mujs": "kremlin data/typescript/net-server.ts && babel build/kremlin/net-server.js > build/kremlin/net-server.mu.js"
    },
    "dependencies": {
        "codemirror": "^5.53.2",
        "nearley": "^2.19.2",
        "vis-metapkg": "file:src/vis",
        "vue": "^2.6.11",
        "vue-class-component": "^7.2.3"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.10",
        "@types/codemirror": "0.0.91",
        "@types/node": "^13.13.4",
        "@vue/component-compiler-utils": "^3.1.2",
        "cssnano": "^4.1.11",
        "nw-vue-devtools-prebuilt": "0.0.10",
        "typescript": "^3.9.9",
        "vue-hot-reload-api": "^2.3.4",
        "vue-template-compiler": "^2.6.11"
    },
    "browserslist": [
        "Chrome 78"
    ],
    "chromium-args": "--load-extension='./node_modules/nw-vue-devtools-prebuilt/extension'"
}
