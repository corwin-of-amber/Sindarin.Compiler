{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es2019",
    "module": "esnext",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "strict": false
  },
  "typeRoots": [
    "node_modules/@types",
    "./src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "data",
    "**/convert-c99.js"
  ]
}
